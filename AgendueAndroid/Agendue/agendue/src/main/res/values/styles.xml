<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Set AppCompat’s actionBarStyle -->
        <item name="colorAccent">@color/primary</item>
        <!-- Set AppCompat’s color theming attrs -->
        <!--<item name="colorPrimary">@color/primary</item>-->
        <!--<item name="colorPrimaryDark">@color/primarydark</item>-->

        <!-- The rest of your attributes -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:activatedBackgroundIndicator">@drawable/navigation_selector</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textViewStyle">@style/AgendueTextViewStyle</item>

    </style>
    <style name = "SplashScreen" parent="Theme.AppCompat.Light">

        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowTitleSize">0dp</item>
    </style>


    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AgendueTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>

    </style>
</resources>
