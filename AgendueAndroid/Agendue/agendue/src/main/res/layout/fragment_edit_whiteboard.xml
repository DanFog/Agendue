<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agendue.agendue.EditWhiteboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/edit_whiteboard_webview"
        android:layout_gravity="center" />
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/save_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_save"
        fab:fab_colorNormal="@color/agendueorange"
        fab:fab_colorPressed="@color/agenduedarkorange"
        fab:fab_colorRipple="@color/white"
        android:visibility="gone" />
</FrameLayout>
