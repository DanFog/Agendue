<!DOCTYPE html>
<html>
	<head>
		<title>Agendue</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  	<%= csrf_meta_tags %>
	  	<!-- <meta name="viewport" content="target-densitydpi=device-dpi, initial-scale=1.0, user-scalable=no" /> -->
		<script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		  ga('create', 'UA-49704891-1', 'agendue.com');
		  ga('send', 'pageview');

		</script>
	  	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
	  	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js"></script>
		<script type="text/javascript" src="/assets/jquery.fullPage.js?body=1"></script>
			<script type="text/javascript">
				$(document).ready(function() {
					$.fn.fullpage({
						slidesColor: ['#3692d5', '#3692d5', '#3692d5', '#3692d5', '#3692d5', '#3692d5', '#3692d5'],
						anchors: ['1', '2', '3', '4', '5', '6', '7'],
						navigation: true, 
						navigationPosition: 'right',
						navigationTooltips: ['Welcome','Projects', 'Team&nbspMembers', 'Tasks', 'Bulletins', 'Notebook','Let\'s&nbspstart'],
						scrollingSpeed: 600,
						css3: true,
					});
				});
		</script>
 	<link href='https://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>

	</head>
	<body>
		<div class="section active">
			<div class="tour">
				<h1 class="title">Welcome to Agendue</h1>
				<h2>Let's have a look around.</h2>
				<div class="homepage7bottom">
	                <p class="tournav">Scroll down or click the dots to continue</p>
	            </div>
			</div>
		</div>
		<div class="section">
				<div class="tour">
					<h2>Agendue organizes your life into projects</h2>
	                <%= image_tag "tour/tour-project.png", :class => "tourpic" %>
				</div>
		</div>
		<div class="section">
				<div class="tour">
					<h2>Share your projects with other team members</h2>
	                <%= image_tag "tour/tour-team.png", :class => "tourpic" %>
				</div>
		</div>
		<div class="section">
				<div class="tour">
					<h2>Create tasks to track projects</h2>
	                <%= image_tag "tour/tour-tasks.png", :class => "tourpic" %>
				</div>
		</div>
		<div class="section">
				<div class="tour">
					<h2>Use bulletins to communicate with team members</h2>
	                <%= image_tag "tour/tour-bulletin.png", :class => "tourpic" %>
				</div>
		</div>
		<div class="section">
				<div class="tour">
					<h2>Write project information in the notebook</h2>
	                <%= image_tag "tour/tour-notebook.png", :class => "tourpic" %>
				</div>
	    </div>
	   	<div class="section">
	   			<div class="tour">
   					<h1>Let's get started</h1>
	   				<% if @user %>
                    	<%= link_to "Begin", root_path, :class => "tourbutton", data: {no_turbolink: true} %>
	   				<% else %>
                    	<%= link_to "Sign up", new_user_path, :class => "tourbutton" %>
	   				<% end %>
	   			</div>
	            <div class="homepage7bottom">
	                <a href="#1" class="homepageupbutton7">Click here to go to top</a>
	            </div>
	    </div>	
	</body>
</html>