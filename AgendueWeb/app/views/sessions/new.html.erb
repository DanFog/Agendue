<div class="page-header">
  <h1>Sign In</h1>
</div>
<div class="panel panel-default">
  <div class="panel-body">
  	<p>Welcome to Agendue. Please sign in below.</p>
  	<div class="input-group">
  		<div class="oauthlogin-button">
  			<%= link_to image_tag( 'facebook-login.png'), 'auth/facebook' %>
  		</div>
      <div class="oauthlogin-button">
        <%= link_to image_tag( 'google-login.png'), 'auth/google_oauth2' %>
      </div>
	  </div>
	<br>
    <%= form_tag do %>
      <div class="input-group">
        <span class="input-group-addon">Username</span>
		    <%= text_field_tag :name, params[:name], :class => "form-control" %>
      </div>
      <br>
      <div class="input-group">
        <span class="input-group-addon">Password</span>
		    <%= password_field_tag :password, params[:password], :class => "form-control" %>
	  </div>
	  <br>
	  <div class="input-group">
        <%= button_to sessions_path, :method => :post, :class => "btn btn-default green"  do %>
        <span class="glyphicon glyphicon-ok"></span> Sign In
        <% end %><br>
      </div>
    <% end %>
    <%= link_to "Create an Account", new_user_path %> | 
    <%= link_to "Reset Password", new_password_reset_path %>
  </div>
</div>

